package com.lec.service;

import com.lec.dao.PersonRepository;

import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class DeleteService implements Service {

	public void execute(HttpServletRequest request, HttpServletResponse response) {
		// id 파라미터를 받아 dao를 통해 delete하고 결과를 request에 setAttribute
		int id = Integer.parseInt(request.getParameter("id"));
		PersonRepository dao = PersonRepository.getInstance();
		int deleteResult = dao.deletePerson(id);
		String deleteMsg = (deleteResult==PersonRepository.SUCCESS? id + "번 삭제 성공" : id + "번 삭제 실패");
	}
}
